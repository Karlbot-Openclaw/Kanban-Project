/* Custom CSS for mobile responsiveness */
body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* Mobile-first responsive design */
@media (max-width: 768px) {
  .header-buttons {
    flex-direction: column;
    gap: 2px;
  }
  
  .add-column-btn,
  .add-card-btn {
    font-size: 14px;
    padding: 8px 12px;
    min-height: 44px;
  }
  
  .column {
    min-width: 280px;
    width: 100%;
    margin-bottom: 16px;
  }
  
  .cards-container {
    max-height: 400px;
    overflow-y: auto;
  }
  
  .card {
    min-height: 80px;
    padding: 12px;
  }
  
  .card-actions {
    flex-direction: column;
    gap: 4px;
  }
  
  .modal-content {
    margin: 20px;
    max-width: none;
  }
  
  .modal-form {
    gap: 16px;
  }
  
  .modal-actions {
    flex-direction: column;
    gap: 8px;
  }
}

@media (max-width: 480px) {
  .column {
    min-width: 100%;
    margin-bottom: 12px;
  }
  
  .column-header {
    flex-direction: column;
    gap: 8px;
    align-items: flex-start;
  }
  
  .column-title {
    font-size: 18px;
  }
  
  .column-actions {
    width: 100%;
    justify-content: space-between;
  }
  
  .add-card-btn-mobile {
    width: 100%;
    justify-content: center;
  }
  
  .modal-content {
    margin: 12px;
  }
}

/* Touch-friendly sizing */
.touch-target {
  min-height: 44px;
  min-width: 44px;
}

/* Improved drag and drop for mobile */
.column.drop-target {
  border: 2px dashed #3b82f6;
  background-color: #eff6ff;
  transition: all 0.3s ease;
}

.card.dragging {
  opacity: 0.5;
  transform: scale(0.95);
  transition: all 0.3s ease;
}

/* Smooth transitions */
* {
  transition: background-color 0.2s ease, border-color 0.2s ease, color 0.2s ease;
}

/* Prevent text selection during drag */
.card {
  user-select: none;
}

/* Loading states */
.loading {
  opacity: 0.6;
  pointer-events: none;
}

/* Focus states for accessibility */
.card:focus,
.column:focus,
button:focus {
  outline: 2px solid #3b82f6;
  outline-offset: 2px;
}

/* Improved card styling */
.card {
  border-radius: 12px;
  border: 1px solid #e5e7eb;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  max-width: 300px; /* Prevent cards from becoming too wide */
  word-wrap: break-word; /* Break long words */
  overflow-wrap: break-word; /* Modern equivalent */
}

.card h4 {
  word-break: break-word; /* Break long title words */
  display: -webkit-box;
  -webkit-line-clamp: 2; /* Title max 2 lines */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card:hover {
  border-color: #d1d5db;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

/* Card description text truncation */
.card p {
  display: -webkit-box;
  -webkit-line-clamp: 3; /* Show max 3 lines */
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.5;
  max-height: 4.5em; /* Fallback for non-webkit browsers */
  word-break: break-word; /* Break extremely long words */
}

/* Card label - ensure it doesn't overflow */
.card .label {
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: inline-block;
  vertical-align: middle;
}

/* Column styling */
.column {
  border-radius: 16px;
  border: 1px solid #e5e7eb;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  
  /* Fixed width for desktop to prevent overflow from long content */
  flex: 0 0 300px;
  width: 300px;
}

/* Column move buttons */
.column .move-left-btn,
.column .move-right-btn {
  opacity: 0.5;
  cursor: not-allowed;
  transition: opacity 0.2s ease, color 0.2s ease;
}

.column .move-left-btn:hover,
.column .move-right-btn:hover {
  opacity: 0.8;
}

/* Enable buttons based on position - will be toggled by JS */
.column:not(:first-child) .move-left-btn {
  opacity: 1;
  cursor: pointer;
}

.column:not(:last-child) .move-right-btn {
  opacity: 1;
  cursor: pointer;
}

.column-header {
  padding: 16px;
}

.column-title {
  font-size: 20px;
  font-weight: 600;
  color: #1f2937;
}

.column-actions {
  display: flex;
  gap: 8px;
}

/* Button styling */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 12px 16px;
  font-size: 16px;
  font-weight: 500;
  border-radius: 8px;
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
  min-height: 44px;
}

.btn:focus {
  outline: 2px solid #3b82f6;
  outline-offset: 2px;
}

.btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.btn-primary {
  background-color: #3b82f6;
  color: white;
}

.btn-primary:hover:not(:disabled) {
  background-color: #2563eb;
}

.btn-secondary {
  background-color: #e5e7eb;
  color: #6b7280;
}

.btn-secondary:hover:not(:disabled) {
  background-color: #d1d5db;
}

.btn-danger {
  background-color: #ef4444;
  color: white;
}

.btn-danger:hover:not(:disabled) {
  background-color: #dc2626;
}

/* Modal styling */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  z-index: 1000;
}

.modal-content {
  background-color: white;
  border-radius: 16px;
  max-width: 500px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
}

.modal-header {
  padding: 24px;
  border-bottom: 1px solid #e5e7eb;
}

.modal-body {
  padding: 24px;
}

.modal-footer {
  padding: 24px;
  border-top: 1px solid #e5e7eb;
  display: flex;
  gap: 12px;
  justify-content: flex-end;
}

/* Form styling */
.form-group {
  margin-bottom: 20px;
}

.form-label {
  display: block;
  margin-bottom: 8px;
  font-weight: 500;
  color: #374151;
}

.form-input,
.form-textarea,
.form-select {
  width: 100%;
  padding: 12px;
  border: 1px solid #d1d5db;
  border-radius: 8px;
  font-size: 16px;
  transition: border-color 0.2s ease;
}

.form-input:focus,
.form-textarea:focus,
.form-select:focus {
  outline: none;
  border-color: #3b82f6;
}

.form-textarea {
  resize: vertical;
  min-height: 80px;
}

/* Badge styling */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 4px 8px;
  font-size: 12px;
  font-weight: 500;
  border-radius: 6px;
  text-transform: uppercase;
}

.badge-blue {
  background-color: #eff6ff;
  color: #1d4ed8;
}

.badge-red {
  background-color: #fee2e2;
  color: #dc2626;
}

.badge-green {
  background-color: #dcfce7;
  color: #16a34a;
}

.badge-purple {
  background-color: #f0dbff;
  color: #7c3aed;
}

/* Loading spinner */
.spinner {
  width: 20px;
  height: 20px;
  border: 2px solid #e5e7eb;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Empty state */
.empty-state {
  text-align: center;
  padding: 40px 20px;
  color: #6b7280;
}

.empty-state-icon {
  font-size: 48px;
  margin-bottom: 16px;
  opacity: 0.5;
}

.empty-state-title {
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 8px;
}

.empty-state-description {
  font-size: 14px;
  line-height: 1.5;
}

/* Swipe indicators for mobile */
.swipe-indicator {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(59, 130, 246, 0.1);
  border: 1px solid rgba(59, 130, 246, 0.2);
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.swipe-indicator.visible {
  opacity: 1;
}

/* Prevent zoom on input focus for mobile */
@media (max-width: 768px) {
  select,
  textarea,
  input {
    font-size: 16px !important;
  }
}

/* Performance optimization */
.will-change-transform {
  will-change: transform;
}

/* Accessibility improvements */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* Print styles */
@media print {
  .btn,
  .modal,
  .header {
    display: none !important;
  }
  
  .column {
    break-inside: avoid;
    page-break-inside: avoid;
  }
}